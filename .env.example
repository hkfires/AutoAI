# AutoAI Environment Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite database path (async driver)
DATABASE_URL=sqlite+aiosqlite:///./data/autoai.db

# =============================================================================
# Logging Configuration
# =============================================================================
# Valid values: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Admin Configuration (REQUIRED)
# =============================================================================
# Password for admin access - must be set, cannot be empty
ADMIN_PASSWORD=your_secure_password_here

# =============================================================================
# Encryption Configuration (Optional)
# =============================================================================
# Fernet encryption key for API key storage
# If not set, will be auto-generated on first startup
ENCRYPTION_KEY=
